<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:tag="layout/activity_file_info_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/textsizetoolbar"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dip"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/ivVideo"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/logo"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:layout_width="50dip"
                            android:layout_height="50dip"
                            android:src="@drawable/ic_play"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/colorAccent"
                    android:textAllCaps="true"
                    android:id="@+id/tvSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="20.3MB"
                    android:singleLine="true"
                    android:textIsSelectable="true"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/text_color"
                    android:gravity="center_horizontal"
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:textIsSelectable="true"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/text_color"
                    android:gravity="center_horizontal"
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textIsSelectable="true"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                style="@style/AppOptionStyle">
                <Button
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/btnOpen"
                    android:text="@string/open_file"
                    style="@style/AppOptionButtonStyle"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                style="@style/AppOptionStyle">
                <Button
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/btnShare"
                    android:text="@string/share_file"
                    style="@style/AppOptionButtonStyle"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                style="@style/AppOptionStyle">
                <Button
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/btnRestore"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/restore_file"/>
            </androidx.cardview.widget.CardView>

            <View android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"/>
            <include
                android:layout_marginEnd="5dip"
                android:layout_marginStart="5dip"
                android:layout_marginTop="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_ads_control">
            </include>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
