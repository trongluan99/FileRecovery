    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_toolbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/bg_toolbar_history"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_2" />

        <TextView
            android:id="@+id/txt_recovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_recovery"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_back"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_recovery_now"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:gravity="center"
            android:text="@string/restore_now"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:background="@drawable/bg_result_off">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gv_folder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:clipToPadding="false"
        android:scrollbarThumbVertical="@drawable/ic_scrollbar"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imagePickedArea"
        app:layout_constraintTop_toBottomOf="@+id/cons_toolbar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imagePickedArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/layout_native"
        android:visibility="gone">

        <com.jm.filerecovery.videorecovery.photorecovery.model.BaseCustomCornerView
            android:id="@+id/bgWhiteView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:cornerRadiusView="0dp"
            app:bgColor="@color/white"
            app:shadowBottomOnly="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mediaPickedListView"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/expandViewButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_swipe_up_vector"
            android:padding="4dp"
            android:background="@drawable/bg_ripple_circle_white_button"
            app:cornerRadiusImageView="12dp"
            app:layout_constraintStart_toStartOf="@id/bgWhiteView"
            app:layout_constraintEnd_toEndOf="@id/bgWhiteView"
            app:layout_constraintTop_toTopOf="@id/bgWhiteView"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginBottom="2dp"
            android:text="@string/press_to_move"
            app:layout_constraintStart_toStartOf="@id/bgWhiteView"
            app:layout_constraintEnd_toEndOf="@id/bgWhiteView"
            app:layout_constraintBottom_toBottomOf="@id/bgWhiteView"
            app:layout_constraintTop_toTopOf="@+id/bgWhiteView"/>

        <com.jm.filerecovery.videorecovery.photorecovery.model.RippleTextViewCustom
            android:id="@+id/startButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:cornerRadiusTextView="4dp"
            android:text="@string/start"
            android:textColor="#1d1d1d"
            android:textSize="14dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_medium"
            app:bgColorTextView="#4A58B0"
            app:layout_constraintEnd_toEndOf="@id/bgWhiteView"
            app:layout_constraintTop_toTopOf="@id/bgWhiteView"
            app:layout_constraintBottom_toBottomOf="@id/bgWhiteView"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/numberMediaPicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="@id/bgWhiteView"
            app:layout_constraintBottom_toBottomOf="@id/bgWhiteView"
            app:layout_constraintStart_toStartOf="@id/bgWhiteView"
            android:layout_marginStart="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mediaPickedListView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_restore"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            android:background="@color/white"
            tools:listitem="@layout/item_image_choosed"
            tools:layout_height="96dp"/>
        <ImageView
            android:id="@+id/img_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="@+id/mediaPickedListView"
            app:layout_constraintBottom_toBottomOf="@+id/mediaPickedListView"
            app:layout_constraintEnd_toEndOf="@+id/text_restore"
            app:layout_constraintStart_toStartOf="@+id/text_restore"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:src="@drawable/ic_preview_image" />
        <TextView
            android:id="@+id/text_restore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/img_next"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/restore_now"
            android:textColor="@color/black"
            android:layout_marginHorizontal="4dp"
            android:textSize="12dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/layout_native"
        layout="@layout/layout_native_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dip"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="5dip"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>