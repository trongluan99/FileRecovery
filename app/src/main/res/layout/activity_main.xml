<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_more"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_more_horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@+id/banner_ads"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp">

            <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                android:id="@+id/circular_progress"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:direction="clockwise"
                app:dotColor="@color/color_white"
                app:dotWidth="@dimen/_9sdp"
                app:drawDot="true"
                app:gradientEndColor="#EF4CAE"
                app:gradientType="linear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:progressBackgroundColor="#F0F0F0"
                app:progressStrokeWidth="@dimen/_16sdp"
                app:textColor="@android:color/transparent"
                app:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/bg_chart"
                app:layout_constraintBottom_toBottomOf="@+id/circular_progress"
                app:layout_constraintEnd_toEndOf="@+id/circular_progress"
                app:layout_constraintStart_toStartOf="@+id/circular_progress"
                app:layout_constraintTop_toTopOf="@+id/circular_progress" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_percent"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/circular_progress"
                app:layout_constraintEnd_toEndOf="@+id/circular_progress"
                app:layout_constraintStart_toStartOf="@+id/circular_progress"
                app:layout_constraintTop_toTopOf="@+id/circular_progress"
                tools:text="55%" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_1sdp"
                android:singleLine="true"
                android:text="@string/used"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="@+id/tv_percent"
                app:layout_constraintStart_toStartOf="@+id/tv_percent"
                app:layout_constraintTop_toBottomOf="@+id/tv_percent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_free"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:elevation="0dp"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/circular_progress"
                app:layout_constraintDimensionRatio="H,1:1.2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_used"
                app:layout_constraintTop_toTopOf="@+id/circular_progress">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.veeyaar.supergradienttextview.GradientTextView
                        android:id="@+id/tv_free"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_1sdp"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        app:endColor="#0DDF60"
                        app:isVertical="true"
                        app:startColor="#4FF6F6" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_1sdp"
                        android:text="@string/free"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_used"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintDimensionRatio="H,1:1.2"
                app:layout_constraintEnd_toStartOf="@+id/card_free"
                app:layout_constraintStart_toEndOf="@+id/card_memory"
                app:layout_constraintTop_toTopOf="@+id/card_free">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.veeyaar.supergradienttextview.GradientTextView
                        android:id="@+id/tv_used"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_1sdp"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        app:endColor="#EF2834"
                        app:isVertical="true"
                        app:startColor="#F955C1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_1sdp"
                        android:text="@string/used"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_memory"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintDimensionRatio="H,1:1.2"
                app:layout_constraintEnd_toStartOf="@+id/card_used"
                app:layout_constraintStart_toEndOf="@+id/circular_progress"
                app:layout_constraintTop_toTopOf="@+id/card_free">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.veeyaar.supergradienttextview.GradientTextView
                        android:id="@+id/tv_memory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_1sdp"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        app:endColor="#A641F5"
                        app:isVertical="true"
                        app:startColor="#EF4CAE" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_1sdp"
                        android:text="@string/memory"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_number_function"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/circle_number"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/circular_progress" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/feature"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_number_function"
                app:layout_constraintStart_toEndOf="@+id/tv_number_function"
                app:layout_constraintTop_toTopOf="@+id/tv_number_function" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ctr_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_22sdp"
                app:layout_constraintDimensionRatio="W,1:1"
                app:layout_constraintEnd_toStartOf="@+id/ctr_video"
                app:layout_constraintStart_toStartOf="@+id/tv_number_function"
                app:layout_constraintTop_toBottomOf="@+id/tv_number_function">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_image">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_image_click"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        app:riv_corner_radius="@dimen/_15sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/bg_ware"
                        android:padding="@dimen/_17sdp"
                        android:src="@drawable/ic_image"
                        app:layout_constraintBottom_toTopOf="@+id/tv_image"
                        app:layout_constraintDimensionRatio="W,1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintWidth_percent="0.4" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/image"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ctr_video"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_22sdp"
                app:layout_constraintDimensionRatio="W,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ctr_image"
                app:layout_constraintTop_toTopOf="@+id/ctr_image">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_video">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_video_click"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        app:riv_corner_radius="@dimen/_15sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_video"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/bg_ware"
                        android:padding="@dimen/_17sdp"
                        android:src="@drawable/ic_video"
                        app:layout_constraintBottom_toTopOf="@+id/tv_video"
                        app:layout_constraintDimensionRatio="W,1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintWidth_percent="0.4" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/video"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_video" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ctr_audio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_22sdp"
                app:layout_constraintDimensionRatio="W,1:1"
                app:layout_constraintEnd_toStartOf="@+id/ctr_history"
                app:layout_constraintStart_toStartOf="@+id/ctr_image"
                app:layout_constraintTop_toBottomOf="@+id/ctr_image">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_audio">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_audio_click"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        app:riv_corner_radius="@dimen/_15sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_audio"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/bg_ware"
                        android:padding="@dimen/_17sdp"
                        android:src="@drawable/ic_audio"
                        app:layout_constraintBottom_toTopOf="@+id/tv_audio"
                        app:layout_constraintDimensionRatio="W,1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintWidth_percent="0.4" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/audio"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_audio" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/ctr_history"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_22sdp"
                app:layout_constraintDimensionRatio="W,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ctr_audio"
                app:layout_constraintTop_toTopOf="@+id/ctr_audio">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_history">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/iv_his_click"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        app:riv_corner_radius="@dimen/_15sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_his"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/bg_ware"
                        android:padding="@dimen/_15sdp"
                        android:src="@drawable/ic_history"
                        app:layout_constraintBottom_toTopOf="@+id/tv_his"
                        app:layout_constraintDimensionRatio="W,1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed"
                        app:layout_constraintWidth_percent="0.4" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_his"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/recovery_file"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_his" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_number_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/circle_number"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_2sdp"
                android:singleLine="true"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ctr_audio" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/photo_restored"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_number_image"
                app:layout_constraintEnd_toStartOf="@+id/tv_see_all"
                app:layout_constraintStart_toEndOf="@+id/tv_number_image"
                app:layout_constraintTop_toTopOf="@+id/tv_number_image" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:text="@string/see_all"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_number_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_number_image" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tv_number_image"
                app:spanCount="1"
                tools:listitem="@layout/item_photo_restored" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        android:id="@+id/banner_ads"
        layout="@layout/layout_banner_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>